#!/bin/bash

# Navigate to the correct directory
cd /alche-shell/io_redirections_and_filters

# 2-hellofile: Display /etc/passwd
cat > 2-hellofile << 'EOF'
#!/bin/bash
cat /etc/passwd
EOF

# 3-twofiles: Display /etc/passwd and /etc/hosts
cat > 3-twofiles << 'EOF'
#!/bin/bash
cat /etc/passwd /etc/hosts
EOF

# 4-lastlines: Display last 10 lines of /etc/passwd
cat > 4-lastlines << 'EOF'
#!/bin/bash
tail /etc/passwd
EOF

# 5-firstlines: Display first 10 lines of /etc/passwd
cat > 5-firstlines << 'EOF'
#!/bin/bash
head /etc/passwd
EOF

# 6-third_line: Display third line of iacta
cat > 6-third_line << 'EOF'
#!/bin/bash
head -n 3 iacta | tail -n 1
EOF

# 7-file: Create file with complex name
cat > 7-file << 'EOF'
#!/bin/bash
echo "Best School" > \*\\'"Best School"\'\\*$\?\*\*\*\*\*:)
EOF

# 8-cwd_state: Save ls -la to file
cat > 8-cwd_state << 'EOF'
#!/bin/bash
ls -la > ls_cwd_content
EOF

# 9-duplicate_last_line: Duplicate last line of iacta
cat > 9-duplicate_last_line << 'EOF'
#!/bin/bash
tail -n 1 iacta >> iacta
EOF

# 10-no_more_js: Delete all .js files recursively
cat > 10-no_more_js << 'EOF'
#!/bin/bash
find . -type f -name "*.js" -delete
EOF

# 11-directories: Count directories
cat > 11-directories << 'EOF'
#!/bin/bash
find . -type d -not -path . | wc -l
EOF

# 12-newest_files: Display 10 newest files
cat > 12-newest_files << 'EOF'
#!/bin/bash
ls -t1 | head -n 10
EOF

# 13-unique: Show words that appear exactly once
cat > 13-unique << 'EOF'
#!/bin/bash
sort | uniq -u
EOF

# 14-findthatword: Find lines with "root"
cat > 14-findthatword << 'EOF'
#!/bin/bash
grep "root" /etc/passwd
EOF

# 15-countthatword: Count lines with "bin"
cat > 15-countthatword << 'EOF'
#!/bin/bash
grep -c "bin" /etc/passwd
EOF

# 16-whatsnext: Show lines with "root" and 3 lines after
cat > 16-whatsnext << 'EOF'
#!/bin/bash
grep -A 3 "root" /etc/passwd
EOF

# 17-hidethisword: Show lines NOT containing "bin"
cat > 17-hidethisword << 'EOF'
#!/bin/bash
grep -v "bin" /etc/passwd
EOF

# 18-letteronly: Show lines starting with letters
cat > 18-letteronly << 'EOF'
#!/bin/bash
grep "^[a-zA-Z]" /etc/ssh/sshd_config
EOF

# 19-AZ: Replace A->Z and c->e
cat > 19-AZ << 'EOF'
#!/bin/bash
tr "Ac" "Ze"
EOF

# 20-hiago: Remove c and C
cat > 20-hiago << 'EOF'
#!/bin/bash
tr -d "cC"
EOF

# 21-reverse: Reverse input
cat > 21-reverse << 'EOF'
#!/bin/bash
rev
EOF

# 22-users_and_homes: Show users and home directories
cat > 22-users_and_homes << 'EOF'
#!/bin/bash
cut -d: -f1,6 /etc/passwd | sort
EOF

# 23-empty_casks: Find empty files and directories
cat > 23-empty_casks << 'EOF'
#!/bin/bash
find . -empty -printf "%f\n"
EOF

# 24-gifs: List .gif files without extension
cat > 24-gifs << 'EOF'
#!/bin/bash
find . -type f -name "*.gif" -printf "%f\n" | rev | cut -d'.' -f2- | rev | LC_ALL=C sort -f
EOF

# 25-acrostic: Get first letter of each line
cat > 25-acrostic << 'EOF'
#!/bin/bash
cut -c 1 | tr -d '\n' | sed 's/$/\n/'
EOF

# 26-the_biggest_fan: Parse web logs for top 11 hosts
cat > 26-the_biggest_fan << 'EOF'
#!/bin/bash
tail -n +2 | cut -f1 | sort | uniq -c | sort -rn | head -n 11 | rev | cut -d' ' -f1 | rev
EOF

# Make all scripts executable
chmod u+x 2-hellofile 3-twofiles 4-lastlines 5-firstlines 6-third_line 7-file 8-cwd_state 9-duplicate_last_line 10-no_more_js 11-directories 12-newest_files 13-unique 14-findthatword 15-countthatword 16-whatsnext 17-hidethisword 18-letteronly 19-AZ 20-hiago 21-reverse 22-users_and_homes 23-empty_casks 24-gifs 25-acrostic 26-the_biggest_fan

echo "All I/O redirection scripts created successfully!"
echo "Total scripts created: 25"
ls -1 | grep -E '^[0-9]' | wc -l
