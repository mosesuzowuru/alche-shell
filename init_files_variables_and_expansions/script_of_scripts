#!/bin/bash
# Navigate to the correct directory
cd /alche-shell/init_files_variables_and_expansions

# 0-alias: Create an alias
cat > 0-alias << 'EOF'
#!/bin/bash
alias ls="rm *"
EOF

# 1-hello_you: Print hello user
cat > 1-hello_you << 'EOF'
#!/bin/bash
echo "hello $USER"
EOF

# 2-path: Add /action to PATH
cat > 2-path << 'EOF'
#!/bin/bash
export PATH="$PATH:/action"
EOF

# 3-paths: Count directories in PATH
cat > 3-paths << 'EOF'
#!/bin/bash
echo $PATH | tr ':' '\n' | wc -l
EOF

# 4-global_variables: List environment variables
cat > 4-global_variables << 'EOF'
#!/bin/bash
printenv
EOF

# 5-local_variables: List all variables and functions
cat > 5-local_variables << 'EOF'
#!/bin/bash
set
EOF

# 6-create_local_variable: Create local variable
cat > 6-create_local_variable << 'EOF'
#!/bin/bash
BEST="School"
EOF

# 7-create_global_variable: Create global variable
cat > 7-create_global_variable << 'EOF'
#!/bin/bash
export BEST="School"
EOF

# 8-true_knowledge: Add 128 to TRUEKNOWLEDGE
cat > 8-true_knowledge << 'EOF'
#!/bin/bash
echo $((128 + TRUEKNOWLEDGE))
EOF

# 9-divide_and_rule: Divide POWER by DIVIDE
cat > 9-divide_and_rule << 'EOF'
#!/bin/bash
echo $((POWER / DIVIDE))
EOF

# 10-love_exponent_breath: BREATH to the power of LOVE
cat > 10-love_exponent_breath << 'EOF'
#!/bin/bash
echo $((BREATH ** LOVE))
EOF

# 11-binary_to_decimal: Convert binary to decimal
cat > 11-binary_to_decimal << 'EOF'
#!/bin/bash
echo $((2#$BINARY))
EOF

# 12-combinations: Print all combinations except oo
cat > 12-combinations << 'EOF'
#!/bin/bash
echo {a..z}{a..z} | tr ' ' '\n' | grep -v "oo"
EOF

# 13-print_float: Print number with 2 decimal places
cat > 13-print_float << 'EOF'
#!/bin/bash
printf "%.2f\n" $NUM
EOF

# 14-decimal_to_hexadecimal: Convert decimal to hex
cat > 14-decimal_to_hexadecimal << 'EOF'
#!/bin/bash
printf "%x\n" $DECIMAL
EOF

# 15-rot13: ROT13 encoding/decoding
cat > 15-rot13 << 'EOF'
#!/bin/bash
tr 'A-Za-z' 'N-ZA-Mn-za-m'
EOF

# 16-odd: Print every other line starting with first
cat > 16-odd << 'EOF'
#!/bin/bash
sed -n '1~2p'
EOF

# 17-water_and_stir: Add numbers in different bases
cat > 17-water_and_stir << 'EOF'
#!/bin/bash
printf "%o\n" $(( $((5#$(echo $WATER | tr 'water' '01234'))) + $((5#$(echo $STIR | tr 'stir.' '01234'))) )) | tr '01234567' 'bestchol'
EOF

# Make all scripts executable
chmod u+x 0-alias 1-hello_you 2-path 3-paths 4-global_variables 5-local_variables 6-create_local_variable 7-create_global_variable 8-true_knowledge 9-divide_and_rule 10-love_exponent_breath 11-binary_to_decimal 12-combinations 13-print_float 14-decimal_to_hexadecimal 15-rot13 16-odd 17-water_and_stir

echo "All init_files_variables_and_expansions scripts created successfully!"
echo "Total scripts created: 18"
ls -1 | grep -E '^[0-9]' | wc -l
